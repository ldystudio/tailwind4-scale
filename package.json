{
  "name": "tailwind4-scale",
  "version": "1.1.1",
  "description": "Tailwind CSS v4 移动端适配工具类库，基于设计稿像素的等比缩放方案",
  "keywords": [
    "tailwindcss",
    "tailwind",
    "mobile",
    "scale",
    "responsive",
    "design-token"
  ],
  "license": "MIT",
  "author": "ldystudio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ldystudio/tailwind4-scale.git"
  },
  "type": "module",
  "exports": {
    ".": "./dist/scale.css",
    "./js": {
      "types": "./dist/scale.d.ts",
      "import": "./dist/scale.js"
    }
  },
  "main": "./dist/scale.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && rolldown -c && mv dist/src/scale.d.ts dist/ && rm -rf dist/src && cp src/scale.css dist/",
    "prepublishOnly": "bun test && bun run build"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "rolldown": "^1.0.0-beta.8"
  }
}
